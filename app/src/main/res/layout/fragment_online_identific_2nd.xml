<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.online_identific_2nd">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/oi2nd_constr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_theme"
        android:clickable="true">

        <View
            android:id="@+id/oi2_divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/panna"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/oi_city"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/naminputbord"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="@string/oi_ucity"
            android:textColor="@color/panna"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oi2_divider" />

        <TextView
            android:id="@+id/oi_address"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="@string/oi_uadddress"
            android:textAlignment="center"
            android:textColor="@color/panna"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oi_postal" />

        <TextView
            android:id="@+id/oi_postal"
            android:layout_width="140dp"
            android:layout_height="42dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/naminputbord"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="@string/oi_upostal"
            android:textColor="@color/panna"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oi_city" />

        <View
            android:id="@+id/oi2_divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="25dp"
            android:background="@color/panna"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oi_inpaddress" />

        <TextView
            android:id="@+id/oi_number"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="@string/oi_unumber"
            android:textAlignment="center"
            android:textColor="@color/panna"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oi_inpaddress" />

        <EditText
            android:id="@+id/oi_inpcity"
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/textbg"
            android:paddingStart="15dp"
            android:textColor="@color/avorio"
            android:textColorHighlight="@color/panna_hint"
            android:textColorHint="@color/panna_hint"
            android:textColorLink="@color/panna_hint"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/oi_city"
            app:layout_constraintTop_toBottomOf="@+id/oi2_divider" />

        <EditText
            android:id="@+id/oi_inppostal"
            android:layout_width="100dp"
            android:layout_height="42dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/textbg"
            android:paddingStart="15dp"
            android:textColor="@color/avorio"
            android:textColorHighlight="@color/panna_hint"
            android:textColorHint="@color/panna_hint"
            android:textColorLink="@color/panna_hint"
            android:textSize="20sp"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/oi_postal"
            app:layout_constraintTop_toBottomOf="@+id/oi_inpcity" />

        <EditText
            android:id="@+id/oi_inpaddress"
            android:layout_width="180dp"
            android:layout_height="42dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/textbg"
            android:paddingStart="15dp"
            android:textColor="@color/avorio"
            android:textColorHighlight="@color/panna_hint"
            android:textColorHint="@color/panna_hint"
            android:textColorLink="@color/panna_hint"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oi_address" />

        <EditText
            android:id="@+id/oi_inpnumber"
            android:layout_width="180dp"
            android:layout_height="42dp"
            android:background="@drawable/textbg"
            android:paddingStart="15dp"
            android:textColor="@color/avorio"
            android:textColorHighlight="@color/panna_hint"
            android:textColorHint="@color/panna_hint"
            android:textColorLink="@color/panna_hint"
            android:textSize="20sp"
            android:inputType="phone"
            app:layout_constraintStart_toEndOf="@+id/oi_prefixph"
            app:layout_constraintTop_toBottomOf="@+id/oi_number" />

        <TextView
            android:id="@+id/oi_homeno"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:layout_marginStart="5dp"
            android:text="@string/oi_noho"
            android:background="@drawable/naminputbord"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/panna"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/oi_inpaddress"
            app:layout_constraintTop_toBottomOf="@+id/oi_address" />

        <EditText
            android:id="@+id/oi_inpnoho"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:paddingStart="5dp"
            android:background="@drawable/textbg"
            android:textColor="@color/avorio"
            android:textColorHighlight="@color/panna_hint"
            android:textColorHint="@color/panna_hint"
            android:textColorLink="@color/panna_hint"
            android:textSize="20sp"
            android:inputType="phone"
            app:layout_constraintStart_toEndOf="@+id/oi_homeno"
            app:layout_constraintTop_toBottomOf="@+id/oi_address" />

        <Spinner
            android:id="@+id/oi_prefixph"
            android:layout_width="80dp"
            android:layout_height="42dp"
            android:layout_marginStart="60dp"
            android:popupBackground="@color/dark_theme"
            android:background="@drawable/spinnerbord"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oi_number" />

        <Button
            android:id="@+id/oi_2NDproceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/sanchez"
            android:stateListAnimator="@null"
            android:text="@string/oi_proceed1"
            android:textStyle="bold"
            android:textColor="@color/panna"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oi_inpnumber" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>