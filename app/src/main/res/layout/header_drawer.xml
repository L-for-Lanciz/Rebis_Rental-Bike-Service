<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:background="@color/lightblack">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/header"/>

    <TextView
        android:id="@+id/hdrebis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/revalia"
        android:text="Rebis"
        android:textColor="@color/panna"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textSize="35sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_propic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/toolsavatar"
        android:layout_marginTop="175dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/panna"/>


    <TextView
        android:id="@+id/header_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/revalia"
        android:textColor="@color/panna"
        android:text="username"
        android:textSize="17sp"
        android:layout_marginTop="185dp"
        android:layout_marginStart="120dp"/>

    <TextView
        android:id="@+id/header_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/panna"
        android:text="username"
        android:textSize="14sp"
        android:layout_marginTop="225dp"
        android:layout_marginStart="120dp"/>

</RelativeLayout>