<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@android:drawable/screen_background_dark_transparent"
    tools:context=".ui.profile.wallet_adder">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/expansionbg">

        <TextView
            android:id="@+id/adwa_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/merienda_one"
            android:text="@string/add_wallet"
            android:textAllCaps="true"
            android:textColor="@color/panna"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/adwa_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/merienda_one"
            android:text="@string/adwahint"
            android:textColor="@color/panna"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adwa_title" />

        <EditText
            android:id="@+id/adwa_address"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/edittxt_cont"
            android:ems="10"
            android:fontFamily="sans-serif-medium"
            android:hint="@string/add_hint"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textColor="@color/panna"
            android:textColorHighlight="@color/panna_hint"
            android:textColorHint="@color/panna_hint"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adwa_pubadrHint" />

        <Button
            android:id="@+id/adwa_add"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/colorAccent"
            android:fontFamily="@font/merienda_one"
            android:text="@string/addW"
            android:textColor="@color/panna"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adwa_inputMnemonic" />

        <Button
            android:id="@+id/adwa_exit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/delete_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/adwa_mnemonicHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/adwa_mnemo"
            android:textColor="@color/panna"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adwa_address" />

        <EditText
            android:id="@+id/adwa_inputMnemonic"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="80dp"
            android:fontFamily="sans-serif-medium"
            android:hint="@string/adwa_hintMne"
            android:background="@drawable/mnemo_bg"
            android:padding="10dp"
            android:gravity="top"
            android:textColor="@color/panna"
            android:textColorHighlight="@color/panna_hint"
            android:textColorHint="@color/panna_hint"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adwa_sample" />

        <TextView
            android:id="@+id/adwa_pubadrHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/adwa_pubadr"
            android:textColor="@color/panna"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adwa_hint" />

        <ImageView
            android:id="@+id/adwa_sample"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adwa_mnemonicHint"
            android:src="@drawable/mnemo_sample" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>