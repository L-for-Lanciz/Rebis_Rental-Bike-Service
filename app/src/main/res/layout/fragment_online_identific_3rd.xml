<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.online_identific_3rd">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/oi2nd_constr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightblack"
        android:clickable="true">

        <TextView
            android:id="@+id/oi3_title"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/revalia"
            android:paddingStart="15dp"
            android:text="@string/oi_title"
            android:textAlignment="viewStart"
            android:textColor="@color/panna"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/oi3_divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@color/panna"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oi3_title" />

        <TextView
            android:id="@+id/oi_3desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:text="@string/oi_3desc"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/panna"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oi3_divider" />

        <View
            android:id="@+id/oi4_divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp"
            android:background="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oi_3desc" />

        <Button
            android:id="@+id/oi_addIMG"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/addimg"
            android:backgroundTint="@color/panna"
            android:stateListAnimator="@null"
            android:textColor="@color/panna"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oi4_divider" />

        <ImageView
            android:id="@+id/oi_IDpicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:src="@android:drawable/ic_menu_report_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oi_imageastatus"/>

        <TextView
            android:id="@+id/oi_imageastatus"
            android:layout_width="180dp"
            android:layout_height="85dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="45dp"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/oi_addIMG"
            app:layout_constraintTop_toBottomOf="@+id/oi4_divider" />

        <Button
            android:id="@+id/oi_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:background="@color/transparent"
            android:fontFamily="@font/sanchez"
            android:stateListAnimator="@null"
            android:text="@string/oi_complete"
            android:textColor="@color/panna"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oi_IDpicture" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>