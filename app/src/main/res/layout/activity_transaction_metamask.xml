<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblack"
    tools:context=".webAPI.Transaction_metamask">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="382dp"
        android:layout_height="260dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/dark_theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txmm_divider" />

    <TextView
        android:id="@+id/txmm_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/revalia"
        android:text="@string/txmm_title"
        android:textColor="@color/avorio"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/txmm_divider"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@color/panna"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txmm_title" />

    <Button
        android:id="@+id/txmm_tryagain"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        android:text="@string/txmm_trybut"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/avorio"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txmm_toMenu"
        app:layout_constraintTop_toBottomOf="@+id/txmm_imbuffer" />

    <ImageView
        android:id="@+id/txmm_imbuffer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txmm_divider"
        app:srcCompat="@drawable/loading_animation" />

    <TextView
        android:id="@+id/txmm_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/rebis_transp"
        android:fontFamily="sans-serif-medium"
        android:paddingVertical="10dp"
        android:text="@string/txmm_desc"
        android:textAlignment="center"
        android:textColor="@color/avorio"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/txmm_imbuffer"
        app:layout_constraintTop_toBottomOf="@+id/txmm_title" />

    <Button
        android:id="@+id/txmm_toMenu"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="sans-serif"
        android:paddingHorizontal="15dp"
        android:text="@string/txmm_menubut"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/avorio"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txmm_tryagain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txmm_imbuffer" />

</androidx.constraintlayout.widget.ConstraintLayout>